<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="appTitle">
        <item name="android:fontFamily">@font/salvatore_bold</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/toolbarTitle</item>
    </style>

    <style name="carListText">
        <item name="android:textSize"> 14sp </item>
        <item name="android:letterSpacing"> -0.02 </item>
        <item name="android:textColor"> #99000000 </item>
        <item name="android:fontFamily"> sans-serif-black </item>
    </style>

    <style name="spinnerTheme" >
        <item name="android:textAlignment"> center </item>
        <item name="fontFamily"> @font/salvatore_regular </item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> 14sp </item>
        <item name="backgroundColor"> #3C3844</item>
        <item name="background"> @drawable/edit_text_bg </item>
    </style>

    <style name="dateTheme">
        <item name="background">@drawable/orange_edit_text_bg</item>
        <item name="android:textAlignment"> center </item>
        <item name="fontFamily"> @font/salvatore_bold </item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> 14sp </item>
    </style>

    <style name="eventSpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAlignment"> center </item>
        <item name="fontFamily">@font/salvatore_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="eventSpinnerDropDownItemStyle">
        <item name="android:textAlignment"> center </item>
        <item name="fontFamily">@font/salvatore_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/edit_text_bg</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>